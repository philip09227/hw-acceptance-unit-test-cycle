<h2>Movies with same director <em><%= @movie.director %></em></h2>
 <table class="table table-striped col-md-12">
   <thead>
     <tr>
       <th>Movie Title</th>
       <th>Rating</th>
       <th>Release Date</th>
       <th>Director</th>
       <th>More Info</th>
     </tr>
   </thead>
   <tbody>
     <% @movies.each do |movie| %>
       <tr>
         <td>
           <%= movie.title %>
         </td>
         <td>
           <%= movie.rating %>
         </td>
         <td>
           <%= movie.release_date %>
         </td>
         <td>
           <%= movie.director %>
         </td>
         <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
       </tr>
     <% end %>
   </tbody>
 </table>

